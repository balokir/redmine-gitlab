server {
  listen 80;
  server_name {{ gitlab_domain }};
  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl;
  server_name {{ gitlab_domain }};

  ssl_certificate     {{ nginx_tls_cert_path }};
  ssl_certificate_key {{ nginx_tls_key_path }};
  include /etc/nginx/snippets/ssl_common.conf;

  client_max_body_size 0;

  location / {
    proxy_pass http://{{ gitlab_upstream_host }}:{{ gitlab_upstream_port }};
    include /etc/nginx/snippets/proxy_common.conf;

    # GitLab specifics
    proxy_set_header X-Forwarded-Ssl on;

    # WebSockets / long requests
    proxy_http_version 1.1;
    proxy_set_header Upgrade    $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

    proxy_read_timeout 3600;
    proxy_send_timeout 3600;
  }
}
